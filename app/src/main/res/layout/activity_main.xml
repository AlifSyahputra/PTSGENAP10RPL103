<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <TextView
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:text="Masuk"
        android:translationY="70dp"
        android:translationX="20dp"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:textStyle="bold"/>
    
    <EditText
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:hint="     Email atau Nomor Telepon"
        android:translationX="20dp"
        android:translationY="150dp"
        android:textColorHint="#C2C2C2"
        android:id="@+id/igemail"
        android:background="@drawable/background"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:hint="     Sandi"
        android:translationX="20dp"
        android:translationY="200dp"
        android:textColorHint="#C2C2C2"
        android:id="@+id/sandi"
        android:background="@drawable/background"/>

    <Button
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:text="Masuk"
        android:translationX="20dp"
        android:translationY="270dp"
        android:id="@+id/Masuk"
        android:backgroundTint="#dd010c"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/logocentang2"
        android:translationX="20dp"
        android:translationY="330dp"
        android:background="#868686"/>
    
    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Perlu Bantuan?"
        android:translationY="330dp"
        android:translationX="275dp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="Ingat Saya?"
        android:translationY="327dp"
        android:translationX="40dp"
        android:textColor="#C2C2C2"/>
    
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:translationX="15dp"
        android:translationY="400dp"
        android:src="@drawable/logofacebook"/>

    <Button
        android:backgroundTint="#00FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masuk dengan Facebook"
        android:translationY="390dp"
        android:translationX="30dp"
        android:textSize="10dp"
        android:id="@+id/masukfb"
        android:textColor="#C2C2C2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baru di Netflix?"
        android:translationX="20dp"
        android:translationY="450dp"
        android:textColor="#5D5D5D"
        android:textSize="16dp"
        android:textStyle="normal"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:text="Daftar Sekarang"
        android:translationY="437dp"
        android:translationX="120dp"
        android:textStyle="bold"
        android:textSize="12dp"
        android:id="@+id/daftar"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Halaman ini dilindungi ole reCAPTCHA Google untuk memastikan kamu bukan bot."
        android:translationX="20dp"
        android:translationY="500dp"
        android:textColor="#5D5D5D"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:text="Pelajari Selengkapnya"
        android:translationY="504dp"
        android:translationX="240dp"
        android:textSize="10dp"
        android:id="@+id/pelajariselengkapnya"
        android:textColor="#3d54ff"/>








    <ImageView
        android:layout_width="110dp"
    android:layout_height="90dp"
    android:src="@drawable/netflix"
    android:translationY="-10dp"
        android:translationX="10dp"/>




</RelativeLayout>